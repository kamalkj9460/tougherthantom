<div class="product__badges {% if block.settings.noMargin or noMargin %}margin__bottom--reduced{%endif-%}" {{block.shopify_attributes}}>
{% if block.settings.badge != blank %}
<img class="lazyloaded lazy2 lazy3" height="{{block.settings.badge.height}}" width="{{block.settings.badge.width}}" loading="lazy" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{block.settings.badge | img_url: '560x'}}" />
{% else %}
<img class="lazyloaded lazy2 lazy3" loading="lazy" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{'badges.png' | asset_img_url: '560x'}}" />
{% endif %}
</div>